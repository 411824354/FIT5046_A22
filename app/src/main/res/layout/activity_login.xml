<?xml version="1.0" encoding="utf-8"?>
<!--登录界面,用LinearLayout-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/home_back2"
    android:orientation="vertical"

    >
    <include layout="@layout/main_title_bar"></include>


    <TextView
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:textSize="54dp"
        android:text="Calorie Tracker"
        android:textColor="#DE000000"
        android:gravity="center"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"></LinearLayout>
    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="35dp"

        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Please input username"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="@color/colorAccent"
        android:textSize="14sp" />


    <EditText
        android:id="@+id/et_psw"
        android:layout_width="341dp"
        android:layout_height="48dp"

        android:layout_marginLeft="35dp"


        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="please input user password"
        android:inputType="textPassword"
        android:paddingLeft="8dp"

        android:textColor="#000000"
        android:textColorHint="@color/colorAccent"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/box_hidpsw"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ePassword"
        android:layout_gravity="center"
        android:text="Show Password"
        android:textStyle="bold"
        android:textColor="#DE000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="11dp"></LinearLayout>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="fill_parent"
        android:layout_height="69dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"
        android:background="@color/colorAccent"
        android:text="Log in"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="35dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_SignUp"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/cardview_light_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"


            android:textSize="18sp" />
        <TextView
            android:id="@+id/editText"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:ems="10"

            android:text="" />

        <Button
            android:shadowColor="@color/design_default_color_primary_dark"
            android:id="@+id/btn_fgPassword"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/cardview_light_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="Forget password?"
            android:textColor="@color/colorAccent"
            android:textAllCaps="false"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>

